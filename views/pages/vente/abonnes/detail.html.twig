{% extends 'pages/vente/detail.html.twig' %}

{% block entity_title %}Abonné{% endblock %}

{% block entity_table %}
    <tr>
        <th>Id</th>
        <td>{{ entity.id }}</td>
    </tr>
    <tr>
        <th>Prénom</th>
        <td>{{ entity.prenom }}</td>
    </tr>
    <tr>
        <th>Nom</th>
        <td>{{ entity.nom }}</td>
    </tr>
    <tr>
        <th>Places restantes</th>
        <td>{{ entity.placeRestante }}</td>
    </tr>
    <tr>
        <th>Recharges</th>
        <td>
            <ul>
                {% for recharge in entity.recharges %}
                    <li>{{ recharge }}</li>
                {% endfor %}
            </ul>
        </td>
    </tr>
{% endblock %}

{% block entity_list_path %}href='{{ app.url_generator.generate('vente-abonnes-list') }}'{% endblock %}

{% block entity_edit_path %}href='{{ app.url_generator.generate('vente-abonnes-edit', { 'id': entity.id }) }}'{% endblock %}

{% block entity_states_link %}{% endblock %}

{% block entity_delete_path %}action='{{ app.url_generator.generate('vente-abonnes-delete', { 'id': entity.id }) }}'{% endblock %}
