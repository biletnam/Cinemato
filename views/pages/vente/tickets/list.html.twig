{% extends 'pages/vente/list.html.twig' %}

{% block entity_title %}Tickets{% endblock %}

{% block entity_add_path %}href='{{ app.url_generator.generate('vente-tickets-new') }}'{% endblock %}

{% block entity_add_label %}Vendre un ticket{% endblock %}

{% block entity_table_headers %}
    <th>Date</th>
    <th>Séance</th>
    <th>Abonné</th>
    <th>Tarif</th>
    <th>Vendeur</th>
    <th>Actions</th>
{% endblock %}

{% block entity_table_content %}
    <td>{{ entity.dateDeVente|date('d-m-Y') }}</td>
    <td>{{ entity.seance }}</td>
    <td>{{ entity.abonne }}</td>
    <td>{{ entity.vendeur }}</td>
    <td>{{ entity.tarif }}</td>
    <td>
        <div>
            <a href='{{ app.url_generator.generate('vente-tickets-detail', { 'id': entity.id }) }}'>Facture</a>
        </div>
        <div>
            <a href='{{ app.url_generator.generate('vente-tickets-edit', { 'id': entity.id }) }}'>Editer</a>
        </div>
    </td>
{% endblock %}
