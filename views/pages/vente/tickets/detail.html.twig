{% extends 'pages/vente/detail.html.twig' %}

{% block entity_title %}Tickets{% endblock %}

{% block entity_table %}
    <tr>
        <th>Id</th>
        <td>{{ entity.id }}</td>
    </tr>
    <tr>
        <th>Date de vente</th>
        <td>{{ entity.dateDeVente|date('d-m-Y H:i') }}</td>
    </tr>
    <tr>
        <th>Note</th>
        <td>{{ entity.note }}</td>
    </tr>
    <tr>
        <th>Séance</th>
        <td>{{ entity.seance }}</td>
    </tr>
    <tr>
        <th>Compte abonné</th>
        <td>{{ entity.abonne }}</td>
    </tr>
    <tr>
        <th>Vendeur</th>
        <td>{{ entity.vendeur }}</td>
    </tr>
    <tr>
        <th>Tarif</th>
        <td>{{ entity.tarif }}</td>
    </tr>
{% endblock %}

{% block entity_list_path %}href='{{ app.url_generator.generate('vente-tickets-list') }}'{% endblock %}

{% block entity_edit_path %}href='{{ app.url_generator.generate('vente-tickets-edit', { 'id': entity.id }) }}'{% endblock %}

{% block entity_states_link %}{% endblock %}

{% block entity_delete_path %}action='{{ app.url_generator.generate('vente-tickets-delete', { 'id': entity.id }) }}'{% endblock %}
