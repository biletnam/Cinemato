{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel='stylesheet' href='{{ asset('assets/css/vendor/bootstrap/bootstrap-datetimepicker.min.css') }}' />
{% endblock %}

{% form_theme form 'form/bootstrap.html.twig' %}

{% block app_container %}
    <div class='page-header'>
        <h1>{% block entity_title %}{% endblock %}</h1>
    </div>

    {% block form_new %}
        <form {% block entity_create_path %}{% endblock %} method='post' {{ form_enctype(form) }}>
            {{ form_widget(form) }}
            <div class='link-wrapper'>
                <input class='btn btn-success' type='submit' name='submit' value='Créer' />
                <input class='btn btn-warning' type='reset' name='reset' value='Annuler' />
                <a class='btn btn-info' {% block entity_list_path %}{% endblock %}>Revenir à la liste</a>
            </div>
        </form>
    {% endblock %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src='{{ asset('assets/js/vendor/bootstrap/bootstrap-3.1.1.min.js') }}'></script>
    <script src='{{ asset('assets/js/vendor/bootstrap/bootstrap-datetimepicker.min.js') }}'></script>
    <script src='{{ asset('assets/js/plugins.js') }}'></script>
{% endblock %}
