{% extends 'pages/intranet/list.html.twig' %}

{% block entity_title %}Séances{% endblock %}

{% block entity_add_path %}href='{{ app.url_generator.generate('intranet-seances-new') }}'{% endblock %}

{% block entity_add_label %}Ajouter une séance{% endblock %}

{% block entity_table_headers %}
    <th>Film</th>
    <th>Horaire</th>
    <th>Salle</th>
    <th>Doublage</th>
    <th>Actions</th>
{% endblock %}

{% block entity_table_content %}
    <th>{{ entity.fk_id_film }}</th>
    <th>{{ entity.pk_timestamp_seance|datetime('d-m-Y H:i') }}</th>
    <th>{{ entity.pkfk_nom_salle }}</th>
    <th>
        <div>
            <a href='{{ app.url_generator.generate('intranet-seances-detail', { 'salle': entity.pkfk_nom_salle, 'horaire': entity.pk_timestamp_seance }) }}'>Détail</a>
        </div>
        <div>
            <a href='{{ app.url_generator.generate('intranet-seances-edit', { 'salle': entity.pkfk_nom_salle, 'horaire': entity.pk_timestamp_seance }) }}'>Editer</a>
        </div>
    </th>
{% endblock %}
