{% extends 'pages/public/public.html.twig' %}

{% form_theme form 'form/bootstrap.html.twig' %}

{% block app_container %}
    <div class='page-header'>
        <h1>{% block entity_title %}{% endblock %}</h1>
    </div>

    {% block form_new %}
        <form {% block entity_create_path %}{% endblock %} method='post' {{ form_enctype(form) }}>
            {{ form_widget(form) }}
            <div class='link-wrapper'>
                <input class='btn btn-success' type='submit' name='submit' value='Noter' />
                <input class='btn btn-warning' type='reset' name='reset' value='Effacer' />
                <a class='btn btn-info' {% block entity_list_path %}{% endblock %}>Revenir au programme</a>
            </div>
        </form>
    {% endblock %}
{% endblock %}
