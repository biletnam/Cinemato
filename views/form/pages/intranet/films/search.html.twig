{% extends 'form/bootstrap.html.twig' %}

{% block search_row %}
{% spaceless %}
    <div class='form-group'>
        {{ form_label(form) }}
        <div class='input-group'>
            {{ form_widget(form) }}
            <span class='input-group-btn'>
                <input type='submit' class='btn btn-info' name='submit' value='Chercher' />
            </span>
        </div>
        {{ form_errors(form) }}
    </div>
{% endspaceless %}
{% endblock search_row %}
